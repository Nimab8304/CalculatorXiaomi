<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="bottom|center_horizontal"
    android:weightSum="9"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/horizontal_scrollView_textAmaliat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
    <TextView
        android:id="@+id/txtamaliat"
        android:textColor="?attr/colorOnPrimary"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:textSize="@dimen/text_view_big"
        android:layout_gravity="end"
        android:maxLines="1" />
    </HorizontalScrollView>
    <TextView
        android:id="@+id/txtjavab"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_small"
        android:layout_gravity="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray_bright"/>
    <TableLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.25"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">
        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAC"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small"
                android:text="AC"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnparantezbaz"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small"
                android:text="("
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnparantezbaste"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small"
                android:text=")"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btntaghsim"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_big"
                android:text="/"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </TableRow>
        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn7"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn8"
                android:layoutDirection="rtl"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn9"
                android:background="?selectableItemBackground"

                android:textSize="@dimen/button_text_size_big"
                android:text="9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnzarb"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_big"
                android:text="*"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </TableRow>
        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn4"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn5"
                android:layoutDirection="rtl"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn6"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnmenha"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_big"
                android:text="-"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </TableRow>
        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn2"
                android:layoutDirection="rtl"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn3"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnjam"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_big"
                android:text="+"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </TableRow>
        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnpakkardan"
                android:layoutDirection="rtl"
                android:background="?selectableItemBackground"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_big"
                android:text=">"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn0"
                android:layoutDirection="rtl"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btndot"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <FrameLayout android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/btnmosavi"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:textSize="@dimen/button_text_size_big"
                    android:background="@drawable/shape_circle"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_gravity="center"
                    android:text="="/>
            </FrameLayout>


        </TableRow>


    </TableLayout>




</LinearLayout>